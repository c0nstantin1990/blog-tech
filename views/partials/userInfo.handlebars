<article class="post">
  <div class="title">
    <span><a href="/post/{{id}}">{{title}}</a></span>
    <span class="metadata">{{user.username}}
      |
      {{format_date created_at}}
      |
      {{comments.length}}
      {{format_plural "comment" comments.length}}</span>
  </div>
  <div class="content">
    <p>{{post_text}}</p>
  </div>
</article>